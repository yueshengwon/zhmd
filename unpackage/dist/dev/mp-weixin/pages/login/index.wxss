.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 0 50rpx;
  background-color: #fff;
}
.logo-container {
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
}
.logo-container .logo {
  width: 200rpx;
  height: 200rpx;
}
.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
}
.title-container .main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}
.form-container {
  width: 100%;
}
.form-container .welcome-text {
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 30rpx;
  display: block;
}
.form-container .input-item {
  margin-bottom: 30rpx;
}
.form-container .input-item .input {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #eee;
  font-size: 32rpx;
  padding: 0 20rpx;
}
.form-container .login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #125AE2;
  color: #fff;
  font-size: 34rpx;
  border-radius: 10rpx;
  margin-top: 50rpx;
}
.form-container .login-btn-disabled {
  background-color: #125AE2;
  color: rgba(255, 255, 255, 0.5);
}
.footer {
  margin-top: auto;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer .copyright, .footer .hotline {
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}