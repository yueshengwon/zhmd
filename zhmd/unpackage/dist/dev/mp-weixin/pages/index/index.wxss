.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.header {
  position: relative;
  width: 100%;
}
.header-bg {
  width: 100%;
  height: 300rpx;
}
.header-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.company-info {
  margin-bottom: 30rpx;
}
.company-info .company-name {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  display: block;
}
.company-info .company-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 10rpx;
  display: block;
}
.top-menu {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}
.top-menu .menu-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.top-menu .menu-item:not(:last-child)::after {
  content: "";
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background-color: #eee;
}
.top-menu .menu-text {
  font-size: 28rpx;
  color: #333;
}
.top-menu .menu-count {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-top: 10rpx;
}
.search-box {
  margin: 92rpx 30rpx 30rpx 30rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border: 2rpx solid #125AE2;
}
.search-box .search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.search-box .search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}
.main-menu {
  margin: 0 30rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
}
.main-menu .menu-grid {
  display: flex;
  flex-wrap: wrap;
}
.main-menu .grid-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}
.main-menu .grid-icon {
  width: 77rpx;
  height: 77rpx;
  margin-bottom: 10rpx;
}
.main-menu .grid-text {
  font-size: 24rpx;
  color: #333;
}
.main-menu .count-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 20rpx;
}
.main-menu .count-section .count-item {
  width: 144rpx;
  height: 123rpx;
  position: relative;
  margin-bottom: 10rpx;
}
.main-menu .count-section .count-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.main-menu .count-section .count-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.main-menu .count-section .count-title {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
  width: 100%;
}
.main-menu .count-section .count-number {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  align-self: flex-start;
  margin-top: 5rpx;
}
.banner {
  margin: 0 30rpx 30rpx;
}
.banner .banner-img {
  width: 100%;
  border-radius: 10rpx;
}
.service-section {
  margin: 0 30rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
}
.service-section .section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.service-section .service-grid {
  display: flex;
  flex-wrap: wrap;
}
.service-section .service-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.service-section .service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.service-section .service-text {
  font-size: 24rpx;
  color: #333;
}
.tabbar-placeholder {
  height: 100rpx;
}