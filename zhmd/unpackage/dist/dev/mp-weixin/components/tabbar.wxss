.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 999;
}
.tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.tabbar-icon {
  width: 48rpx;
  height: 48rpx;
}
.tabbar-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}
.tabbar-text.active {
  color: #125AE2;
}
.tabbar-center {
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tabbar-add {
  width: 96rpx;
  height: 64rpx;
}